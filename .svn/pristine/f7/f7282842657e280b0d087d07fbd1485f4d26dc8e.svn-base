<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@page import="si.um.feri.praktikum.MovieDao"%>
<%@page import="si.um.feri.praktikum.Movie"%>
<%@page import="si.um.feri.praktikum.ShowDao"%>
<%@page import="si.um.feri.praktikum.Show"%>
<%@page import="si.um.feri.praktikum.Comment"%>
<%@page import="si.um.feri.praktikum.CommentDao"%>
<%@page import="si.um.feri.praktikum.User"%>
<%@page import="si.um.feri.praktikum.UserDao"%>
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>Vnos podatkov</title>
	</head>
	
	<body>
		<h1>Seznam podatkov</h1>
		
		<a href="kinoVnos.jsp">Dodajanje</a>
			
		<%
			MovieDao od=new MovieDao();
			ShowDao sh=new ShowDao();
			CommentDao cm=new CommentDao();
			
			if (request.getParameter("izbrisi")!=null) {
				int id=Integer.parseInt(request.getParameter("izbrisi"));
				od.deleteMovie(id); 
			}
			
			if (request.getParameter("vnos")!=null) {
				//od.insert(new Movie(request.getParameter("naziv"),request.getParameter("cena"),request.getParameter("vrsta"),request.getParameter("link"),0));
				od.insertMovie(new Movie(0,request.getParameter("movie_id"),request.getParameter("title"),request.getParameter("originalTitle"),request.getParameter("punchline"),request.getParameter("genre"),Integer.parseInt(request.getParameter("year")),Integer.parseInt(request.getParameter("duration")),request.getParameter("url"),request.getParameter("poster"),request.getParameter("director"),request.getParameter("producer"),request.getParameter("writer"),request.getParameter("cast"), request.getParameter("distributor"),request.getParameter("language"),request.getParameter("country"),request.getParameter("localization"),request.getParameter("plot_outline"),Integer.parseInt(request.getParameter("sum_of_scores")),Integer.parseInt(request.getParameter("num_of_scores")),true));
			}
			if (request.getParameter("vnosC")!=null) {
				cm.insertComment(new Comment(0,request.getParameter("comment"),Integer.parseInt(request.getParameter("movie")),1));
			}
		
		%>
			
		<ul>
			<% for (Movie o :od.selectMovie()) { %>
				<li>
					
					<ul>
						<li>
							Title: <%=o.getTitle()%>
						</li>
						<li>
							Original Title: <%=o.getOriginalTitle()%>
						</li>
						<li>
							Punchline: <%=o.getPunchline()%>
						</li>
						<li>
							Genre: <%=o.getGenre()%>
						</li>
						<li>
							Year: <%=o.getYear()%>
						</li>
						<li>
							Duration: <%=o.getDuration()%>
						</li>
						<li>
							url: <%=o.getUrl()%>
						</li>
						<li>
							
							<img src="<%=o.getPoster()%>" style="width:100px;height:135px;"/>
						</li>
						<li>
							Director: <%=o.getDirector()%>
						</li>
						<li>
							Producer: <%=o.getProducer()%>
						</li>
						<li>
							Writer: <%=o.getWriter()%>
						</li>
						<li>
							Cast: <%=o.getCast()%>
						</li>
						<li>
							Distributor: <%=o.getDistributor()%>
						</li>
						<li>
							Language: <%=o.getLanguage()%>
						</li>
						<li>
							Plot Outline: <%=o.getPlotOutline()%>
						</li>
						<li>
							Sum of Scores: <%=o.getSumOfScores()%>
						</li>
						<li>
							Num of Scores: <%=o.getNumOfScores()%>
						</li>
						<li>
							Na voljo: <%=o.isNa_voljo()%>
						</li>
						<li>
							Predstave filma:
							<% int a = o.getBazniID(); %>
							<ul>
								
								<% for (Show s:sh.selectShow()){ %>
								<% int b = s.getMovieID(); %>
									<% if(a == b){ %>
									<li>
										City: <%=s.getCity() %><br>
										Center: <%=s.getCenter() %><br>
										Theater: <%=s.getTheater() %><br>
										Date: <%=s.getDate() %><br>
										Time: <%=s.getTime() %>
									</li>
									<% } %>
								<% } %>
							</ul>
						</li>
						<li>
						Comment:
						<form action="kinoSeznam.jsp" method="post" id="usrform">
						<textarea rows="4" cols="50" name="comment" form="usrform"></textarea>
						<input type="hidden" name="movie" value="<%=o.getBazniID()%>">
						<input type="submit" name="vnosC" value="Shrani">
						</form>
						
						
						</li>
					</ul>
				</li>
			<% } %>
		</ul>
	
	
	
	</body>
	
</html>